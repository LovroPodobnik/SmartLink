# Vercel Environment Variables Template
# Add these to your Vercel project settings

# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# Database (use external PostgreSQL service like Supabase, Neon, or Railway)
DATABASE_URL=postgresql://user:password@host:port/database

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Vercel API Configuration (for custom domains)
VERCEL_API_TOKEN=your-vercel-api-token
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_TEAM_ID=optional-team-id

# App Domain (your main Vercel domain)
VERCEL_APP_DOMAIN=your-app.vercel.app

# Production Settings
FLASK_ENV=production
DEBUG=False