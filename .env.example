# SmartLink Local Development Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SESSION_SECRET=your-local-development-secret-key-change-this

# Database Configuration (SQLite for local development)
DATABASE_URL=sqlite:///smartlink_local.db

# Email Configuration (Optional - for magic link testing)
# Leave empty to use development mode (auto-login without email)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=noreply@localhost

# Local Development Settings
DEBUG=True
PORT=5000

# Production App Domain (for CNAME records)
APP_DOMAIN=web-production-xxxx.up.railway.app